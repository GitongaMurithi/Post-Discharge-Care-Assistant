<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".doctor.AddNewPatient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Add new patient"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/addNew"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="0"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/progressBar3"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text"
            android:paddingHorizontal="10dp"
            android:hint="Patient name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editText1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Patient email"
            android:paddingHorizontal="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />
        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editText7"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Password"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textColorHint="@color/primary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColorHint="@color/primary"
            app:passwordToggleContentDescription="Toggle password"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            app:hintEnabled="false"
            android:layout_below="@id/editText9"
            android:visibility="gone"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text"
                android:hint="Password"
                android:paddingVertical="5dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/primary" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/textField"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Patient age"
            android:paddingHorizontal="10dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editText2"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Patient residence"
            android:paddingHorizontal="10dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editText3"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Patient phone"
            android:paddingHorizontal="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editText4"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:hint="Test conducted"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/editText6"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/edit_text"
            android:ems="10"
            android:gravity="top"
            android:paddingHorizontal="10dp"
            android:hint="Diagnosis"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/black"
            android:textColorHint="@color/primary" />


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Update"
            android:textColor="@color/black" />

    </RelativeLayout>

</ScrollView>